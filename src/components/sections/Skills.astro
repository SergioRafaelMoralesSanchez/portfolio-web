---
import Angular from "@/icons/angular.astro";
import Bootstrap from "@/icons/bootstrap.astro";
import CSS from "@/icons/css.astro";
import Docker from "@/icons/docker.astro";
import Git from "@/icons/git.astro";
import GitHub from "@/icons/GitHub.astro";
import HTML from "@/icons/html.astro";
import JavaScript from "@/icons/javascript.astro";
import Jest from "@/icons/jest.astro";
import Next from "@/icons/next.astro";
import Node from "@/icons/node.astro";
import PrimeNG from "@/icons/prime-ng.astro";
import React from "@/icons/react.astro";
import MySQL from "@/icons/sql.astro";
import Stencil from "@/icons/stencil.astro";
import TypeScript from "@/icons/type.astro";
import { skills } from "@cv";
import Section from "../Section.astro";

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript, 
  React,
  Node,
  MySQL,
  Git,
  GitHub,
  Next,
  Angular,
  Jest,
  PrimeNG,
  Bootstrap,
  Stencil,
  Docker,
};
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        const Icon = SKILLS_ICONS[name];

        return (
          <li>
            {Icon && <Icon />} <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
    font-weight: 500;
    gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
